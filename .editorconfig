root = true

[*.java]
indent_style = space
indent_size = 4
max_line_length = 120
insert_final_newline = true
indent_size = 4
brace_style = next_line
filename_class = /^[A-Z][\w]*$/
filename_variable = /^[a-z][\w]*$/
filename_constant = /^[A-Z][_A-Z0-9]*$/

[*.md]
max_line_length = 80
trim_trailing_whitespace = false
insert_final_newline = true
indent_style = space
indent_size = 2